<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <!-- ===== HEADER / TOP BAR ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/header_black"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Placeholder for Logo -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empowering The Nation"
            android:textColor="@color/button_white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ===== MENU BAR (DROPDOWNS) ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/button_white"
        android:weightSum="2">

        <Spinner
            android:id="@+id/spinnerSixMonth"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:entries="@array/six_month_courses"
            android:spinnerMode="dropdown"
            android:background="@color/button_white" />

        <Spinner
            android:id="@+id/spinnerSixWeek"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:entries="@array/six_week_courses"
            android:spinnerMode="dropdown"
            android:background="@color/button_white" />
    </LinearLayout>

    <!-- ===== MENU BAR (BUTTONS) ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/button_white"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCalculateFees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calculate Fees"
            android:textColor="@color/text_black"
            android:background="@color/button_white"/>

        <Button
            android:id="@+id/btnContactInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Info"
            android:textColor="@color/text_black"
            android:background="@color/button_white"/>
    </LinearLayout>

    <!-- ===== MAIN CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title & Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview of six-week course:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The six-month course has a variety of courses to offer as well as certified accreditation..."
                android:textColor="@color/text_black"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Placeholder Image -->
            <ImageView
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:src="@drawable/details"
                android:layout_marginBottom="16dp"/>

            <!-- Available Courses Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Courses:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:layout_marginBottom="12dp"/>

            <!-- Courses Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- First Aid -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/childcaring"
                        />

                    <Button
                        android:id="@+id/btnChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ChildMinding"
                        android:background="@color/button_white"
                        android:textColor="@color/text_black"/>
                </LinearLayout>


                <!-- Landscaping -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/garden"
                        />

                    <Button
                        android:id="@+id/GardenBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garden Maintence"
                        android:background="@color/button_white"
                        android:textColor="@color/text_black"/>
                </LinearLayout>

                <!-- Life Skills -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cooking"
                        />

                    <Button
                        android:id="@+id/btnCooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking"
                        android:background="@color/button_white"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
